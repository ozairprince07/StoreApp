                     </children>
                  </HBox>
                  <HBox spacing="20.0">
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                     </VBox.margin>
                     <children>
                        <TextField fx:id="addressField" promptText="Company Address" HBox.hgrow="ALWAYS"/>
                        <TextField fx:id="emailField" layoutX="10.0" layoutY="10.0" promptText="Email Address"
                                   HBox.hgrow="ALWAYS"/>
                     </children>
                  </HBox>
                  <HBox alignment="BOTTOM_RIGHT" spacing="20.0" styleClass="back">
                     <children>
                        <Button fx:id="resetBtn" mnemonicParsing="false" prefWidth="70.0" text="Reset">
                           <HBox.margin>
                              <Insets/>
                           </HBox.margin>
                        </Button>
                        <Button fx:id="saveBtn" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" prefWidth="70.0"
                                text="Update">
                           <HBox.margin>
                              <Insets/>
                           </HBox.margin>
                        </Button>
