               <children>
                  <HBox alignment="CENTER">
                     <children>
                        <AnchorPane fx:id="imagePane">
                           <children>
                              <ImageView fx:id="companyImage" fitHeight="200.0" fitWidth="300.0" pickOnBounds="true"
