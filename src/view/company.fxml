                                    <Image url="@../../../../../../../home/uzair/Desktop/code.png"/>
                                 </image>
                              </ImageView>
                              <HBox alignment="CENTER" layoutX="150.0" layoutY="65.0" AnchorPane.bottomAnchor="0.0"
