                  <TextField fx:id="searchField" promptText="Search Company" AnchorPane.bottomAnchor="0.0"
                             AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                     <padding>
                        <Insets left="30.0" right="30.0"/>
                     </padding>
                  </TextField>
                  <FontAwesomeIcon iconName="SEARCH" layoutX="8.0" layoutY="20.0" styleClass="glyph-icon"
                                   AnchorPane.bottomAnchor="10.142857551574707" AnchorPane.leftAnchor="10.0"
                                   AnchorPane.topAnchor="8.857142448425293"/>
               </children>
            </AnchorPane>
            <AnchorPane VBox.vgrow="ALWAYS">
               <children>
                  <ListView fx:id="listView" prefWidth="270.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                            AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"/>
                  <Button fx:id="addBtn" graphicTextGap="10.0" layoutX="96.0" layoutY="506.0" mnemonicParsing="false"
                          styleClass="coloredButton" text="Add Company" AnchorPane.bottomAnchor="15.0"
                          AnchorPane.rightAnchor="15.0">
                     <graphic>
                        <FontAwesomeIcon iconName="PLUS" size="1.2em" styleClass="glyph-icon"/>
                     </graphic>
                     <padding>
                        <Insets left="15.0" right="15.0"/>
                     </padding>
                  </Button>
               </children>
            </AnchorPane>
         </children>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
         </BorderPane.margin>
      </VBox>
   </left>
   <center>
      <AnchorPane styleClass="front" BorderPane.alignment="CENTER">
