                                 <children>
                                    <Button fx:id="editBtn" mnemonicParsing="false" prefWidth="70.0" text="Edit"
                                            visible="false"/>
                                 </children>
                              </HBox>
                           </children>
                        </AnchorPane>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" spacing="20.0">
                     <children>
                        <Label prefHeight="18.0" prefWidth="81.0" text="My Profile">
